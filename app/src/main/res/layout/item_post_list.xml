<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/post_img_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_insta_profile_thin"
        app:civ_circle_background_color="@color/gray_border"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/gray_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:text="@string/username"
        style="@style/Theme.Instagram.ProfileTextView"
        app:layout_constraintTop_toTopOf="@id/post_img_profile"
        app:layout_constraintBottom_toBottomOf="@id/post_img_profile"
        app:layout_constraintStart_toEndOf="@id/post_img_profile"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more"
        app:layout_constraintTop_toTopOf="@id/post_img_profile"
        app:layout_constraintBottom_toBottomOf="@id/post_img_profile"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/post_img_publication"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:src="@tools:sample/backgrounds/scenic"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_img_profile"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/home_layout_icons"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/post_img_publication"
        android:padding="8dp"
        android:layout_marginHorizontal="16dp">
        <ImageView
            android:src="@drawable/ic_insta_heart"
            style="@style/Theme.Instagram.PostIcon"/>
        <ImageView
            android:src="@drawable/ic_insta_comment"
            style="@style/Theme.Instagram.PostIcon"/>
        <ImageView
            android:src="@drawable/ic_insta_send"
            style="@style/Theme.Instagram.PostIcon"/>
    </LinearLayout>

    <TextView
        tools:text="@tools:sample/lorem/random"
        android:text="@string/agree_terms_policy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_layout_icons"
        android:layout_marginHorizontal="16dp"
        android:maxLines="3"
        android:ellipsize="end"/>

</androidx.constraintlayout.widget.ConstraintLayout>